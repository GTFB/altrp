name="altrp-site"
compatibility_date="2025-10-13"
compatibility_flags=["nodejs_compat"]

pages_build_output_dir="dist"

# D1 Database bindings
# Each developer should create their own D1 database locally:
# 1. Run: wrangler d1 create altrp-site-db
# 2. Copy the database_id from the output
# 3. Create apps/site/wrangler.toml (ignored by git) with your database_id
[[d1_databases]]
binding = "DB"
database_name = "altrp-site-db"
database_id = "YOUR_DATABASE_ID_HERE" # Replace with your D1 database ID

