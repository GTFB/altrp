{
  "name": "altrp-cms",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "next build --experimental-build-mode compile",
    "start": "bun --bun next start",
    "format": "prettier --write .",
    "prepare": "husky install",
    "test": "bun test",
    "test:integration": "bun test tests/integration",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts",
    "db:push": "drizzle-kit push --config=drizzle.config.ts",
    "db:reset": "rm -f apps/cms/db.sqlite && bun run db:generate && bun run db:migrate",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:quick-public": "playwright test tests/e2e/quick-public.spec.ts",
    "test:e2e:quick-public:ui": "playwright test tests/e2e/quick-public.spec.ts --ui",
    "test:e2e:quick-public:headed": "playwright test tests/e2e/quick-public.spec.ts --headed",
    "test:e2e:quick-public:debug": "playwright test tests/e2e/quick-public.spec.ts --debug",
    "test:e2e:accessibility-public": "playwright test tests/e2e/accessibility-public.spec.ts",
    "test:e2e:accessibility-public:ui": "playwright test tests/e2e/accessibility-public.spec.ts --ui",
    "test:e2e:accessibility-public:headed": "playwright test tests/e2e/accessibility-public.spec.ts --headed",
    "test:e2e:accessibility-public:debug": "playwright test tests/e2e/accessibility-public.spec.ts --debug"
  },
  "dependencies": {
