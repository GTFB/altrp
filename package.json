{
  "name": "altrp-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev:site": "bun run --filter=altrp-site dev",
    "dev:wrangler:site": "bun run --filter=altrp-site dev:all",
    "build:site": "bun run --filter=altrp-site build:static",
    "start:site": "bun run --filter=altrp-site start",
    "dev:cms": "bun run --filter=altrp-cms dev",
    "build:cms": "bun run --filter=altrp-cms build",
    "start:cms": "bun run --filter=altrp-cms start",
    "dev:app": "bun run --filter=altrp-app dev",
    "deploy:app": "bun run --filter=altrp-app deploy",
    "build:app": "bun run --filter=altrp-app build",
    "start:app": "bun run --filter=altrp-app start",
    "dev": "concurrently \"bun run dev:cms\" \"bun run dev:app\" \"bun run dev:site\"",
    "build": "bun run build:site && bun run build:cms && bun run build:app",
    "quick-test": "bun run --filter=altrp-cms test:e2e:quick-public",
    "test:integration": "bun run --filter=altrp-cms test:integration",
    "test:e2e": "bun run --filter=altrp-cms test:e2e",
    "db:cms:push": "bun run --filter=altrp-cms db:push",
    "db:cms:reset": "bun run --filter=altrp-cms db:reset",
    "db:app:push": "bun run --filter=altrp-app db:push",
    "db:app:d1:push": "bun run --filter=altrp-app db:push:d1",
    "db:app:reset": "bun run --filter=altrp-app db:reset",
    "db:export:app": "bun scripts/export-sqlite-schema.js data/app.database.sqlite migrations/site/app-schema.sql",
    "db:export:cms": "bun scripts/export-sqlite-schema.js data/cms.database.sqlite migrations/site/cms-schema.sql",
    "db:site:d1:migrate:local": "bun run --filter=altrp-site d1:migrate:local",
    "db:site:d1:migrate:remote": "bun run --filter=altrp-site d1:migrate:remote",
    "cms:up": "node scripts/cms-sqlite-up.js",
    "dev:kill": "taskkill /F /IM node.exe",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.36.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.11.0",
    "marked": "^16.2.1",
    "wrangler": "4"
  }
}
