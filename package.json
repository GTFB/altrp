{
    "name": "jambo-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "engines": {
        "bun": ">=1.1.0"
    },
    "scripts": {
        "dev:site": "bun run --filter=jambo-cms dev",
        "build:site": "bun run --filter=jambo-cms build",
        "start:site": "bun run --filter=jambo-cms start",
        "lint:site": "bun run --filter=jambo-cms lint",
        "dev:cms": "bun run --filter=jambo-cms dev",
        "build:cms": "bun run --filter=jambo-cms build",
        "start:cms": "bun run --filter=jambo-cms start",
        "dev": "concurrently \"bun run dev:site\" \"bun run dev:cms\"",
        "build": "bun run build:site && bun run build:cms",
        "quick-test": "bun run --filter=jambo-cms test:e2e:quick-public"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "concurrently": "^8.2.2"
        },
    "dependencies": {
        "marked": "^16.2.1"
    }
}