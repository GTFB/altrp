{
    "name": "jambo-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "engines": {
        "bun": ">=1.1.0"
    },
    "scripts": {
        "dev:site": "bun run --filter=jambo-site dev",
        "build:site": "bun run --filter=jambo-site build",
        "start:site": "bun run --filter=jambo-site start",
        "dev:cms": "bun run --filter=altrp-cms dev",
        "build:cms": "bun run --filter=altrp-cms build",
        "start:cms": "bun run --filter=altrp-cms start",
        "dev:app": "bun run --filter=jambo-app dev",
        "build:app": "bun run --filter=jambo-app build",
        "start:app": "bun run --filter=jambo-app start",
        "dev": "concurrently \"bun run dev:site\" \"bun run dev:cms\" \"bun run dev:app\"",
        "build": "bun run build:site && bun run build:cms && bun run build:app",
        "quick-test": "bun run --filter=altrp-cms test:e2e:quick-public"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "concurrently": "^8.2.2"
        },
    "dependencies": {
        "marked": "^16.2.1"
    }
}