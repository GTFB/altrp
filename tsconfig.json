{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/lib/*": [
        "./packages/lib/*"
      ],
      "@/hooks/*": [
        "./packages/hooks/*"
      ],
      "@/components/*": [
        "./packages/components/*"
      ],
      "@/repositories/*": [
        "./packages/repositories/*"
      ],
      "@/types/*": [
        "./packages/types/*"
      ]
    }
  },
  "include": [
    "apps/**/*",
    "shared/**/*",
    "packages/**/*"
  ],
  "exclude": ["node_modules"]
}
